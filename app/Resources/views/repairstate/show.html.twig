{% extends 'base.html.twig' %}

{% block body %}
    <h1>RepairState</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ repairState.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ repairState.name }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('repairstate_index') }}"><span class="glyphicon glyphicon-list"></span> {{ 'back to the list'|trans }}</a>
        </li>
        <li>
            <a href="{{ path('repairstate_edit', { 'id': repairState.id }) }}"><span class="glyphicon glyphicon-edit"></span> {{ 'edit'|trans }}</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

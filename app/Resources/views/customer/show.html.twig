{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ 'Customer'|trans }}</h1>

    <a class="btn btn-success" href="{{ path('customer_index') }}">{{ 'back to the list'|trans }}</a>
    <a class="btn btn-primary" href="{{ path('customer_edit', { 'id': customer.id }) }}">{{ 'edit'|trans }}</a>

    <br>
    <br>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ customer.id }}</td>
            </tr>
            <tr>
                <th>{{ 'Created at'|trans }}</th>
                <td>{% if customer.createdAt %}{{ customer.createdAt|date('d/m/Y') }}{% endif %}</td>
            </tr>
            <tr>
                <th>{{ 'Name'|trans }}</th>
                <td>{{ customer.name }}</td>
            </tr>
            <tr>
                <th>{{ 'Cuit dni'|trans }}</th>
                <td>{{ customer.cuitDni }}</td>
            </tr>
            <tr>
                <th>{{ 'Address'|trans }}</th>
                <td>{{ customer.address }}</td>
            </tr>
            <tr>
                <th>{{ 'City'|trans }}</th>
                <td>{{ customer.city }}</td>
            </tr>
            <tr>
                <th>{{ 'Customer.State'|trans }}</th>
                <td>{{ customer.state }}</td>
            </tr>
            <tr>
                <th>{{ 'Zipcode'|trans }}</th>
                <td>{{ customer.zipcode }}</td>
            </tr>
            <tr>
                <th>{{ 'Phones'|trans }}</th>
                <td>{{ customer.phones }}</td>
            </tr>
            <tr>
                <th>{{ 'Email'|trans }}</th>
                <td>{{ customer.email }}</td>
            </tr>
            <tr>
                <th>{{ 'Observations'|trans }}</th>
                <td>{{ customer.observations }}</td>
            </tr>
        </tbody>
    </table>

    <br>
            
    <h2>{{ 'Reparation list'|trans }}</h2>
    
    <a class="btn btn-warning" href="{{ path('reparation_new', { 'id': customer.id }) }}">{{ 'New reparation'|trans }}</a>
    
    <br>
    <br>
    <br>

    {% if customer.reparations | length > 0 %}
        <table class="table table-striped">
            <tbody>
                <tr>
                    <th>NÂº</th>
                    <th>{{ 'Entry date'|trans }}</th>
                    <th>{{ 'Brand'|trans }}</th>
                    <th>{{ 'Model'|trans }}</th>
                    <th>{{ 'Budget'|trans }}</th>
                    <th>{{ 'Payment'|trans }}</th>
                    <th>{{ 'Due'|trans }}</th>
                    <th>{{ 'Estimate delivery date'|trans }}</th>
                    <th>{{ 'Effective delivery date'|trans }}</th>
                    <th>{{ 'State'|trans }}</th>
                    <th>{{ 'Actions'|trans }}</th>
                <tr>

                {% for reparation in customer.reparations %}
                    <tr>
                        <td>{{ reparation.id }}</td>
                        <td>{% if reparation.entryDate %}{{ reparation.entryDate|date('d/m/Y') }}{% endif %}</td>
                        <td>{{ reparation.brand }}</td>
                        <td>{{ reparation.model }}</td>
                        <td>$ {{ reparation.budget }}</td>
                        <td>$ {{ reparation.payment }}</td>
                        <td>$ {{ reparation.budget - reparation.payment }}</td>
                        <td>{% if reparation.estimateDeliveryDate %}{{ reparation.estimateDeliveryDate|date('d/m/Y') }}{% endif %}</td>
                        <td>{% if reparation.effectiveDeliveryDate %}{{ reparation.effectiveDeliveryDate|date('d/m/Y') }}{% endif %}</td>
                        <td>{{ reparation.state.name }}</td>
                        <td>
                            <a class="btn btn-success" href="{{ path('reparation_show', { 'id': reparation.id }) }}">{{ 'show'|trans }}</a>
                            <a class="btn btn-primary" href="{{ path('reparation_edit', { 'id': reparation.id }) }}">{{ 'edit'|trans }}</a>
                            <a class="btn btn-info" href="{{ path('reparation_export', { 'id': reparation.id }) }}"><span class="glyphicon glyphicon-print"></span> {{ 'Print'|trans }}</a>
                        </td>
                    </tr>
                {% endfor %}

            </tbody>
        </table>
    {% else %}
        <h5>El cliente no posee reparaciones.</h5>
    {% endif %}

{% endblock %}

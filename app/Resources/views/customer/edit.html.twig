{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(delete_form) }}
        <a class="btn btn-success" href="{{ path('customer_index') }}">{{ 'back to the list'|trans }}</a>
        <a class="btn btn-default" href="{{ path('customer_show', { 'id': customer.id }) }}">{{ 'Cancel'|trans }}</a>
        <input class="btn btn-danger" type="submit" value="{{ 'delete'|trans }}" onclick="return confirm('{{ 'Are you sure?'|trans }}')">
    {{ form_end(delete_form) }}
    

    <h1>{{ 'Customer edit'|trans }}</h1>
    

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <div class="form-group">
            <div class="col-sm-2"></div>
            <div class="col-sm-10"><input class="btn btn-default" type="submit" value="{{ 'edit'|trans }}" /></div>
            
        </div>
    {{ form_end(edit_form) }}

    
{% endblock %}
